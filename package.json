{
  "name": "squid-lucky",
  "private": true,
  "scripts": {
    "build": "rm -rf lib && tsc",
    "update": "npx npm-check-updates --filter /subsquid/ --upgrade && npm i -f",
    "db:migrate": "npx squid-typeorm-migration apply",
    "processor:start": "node lib/processor.js",
    "query-node:start": "squid-graphql-server",
    "lint": "eslint . --ext .ts --ignore-path .gitignore --ignore-pattern src/abi/**/*  --fix"
  },
  "dependencies": {
    "@ethersproject/abi": "^5.7.0",
    "@polkadot/keyring": "^12.6.2",
    "@subsquid/graphql-server": "3.3.2",
    "@subsquid/ink-abi": "^1.0.1",
    "@subsquid/ss58": "^0.1.4",
    "@subsquid/substrate-processor": "^8.1.1",
    "@subsquid/substrate-runtime": "^1.0.3",
    "@subsquid/typeorm-migration": "0.1.6",
    "@subsquid/typeorm-store": "^1.2.6",
    "dotenv": "^16.0.3",
    "ethers": "^5.7.0",
    "pg": "8.8.0",
    "typeorm": "^0.3.11"
  },
  "devDependencies": {
    "@subsquid/archive-registry": "^3.3.0",
    "@subsquid/ink-typegen": "^0.2.0",
    "@subsquid/substrate-metadata-explorer": "^1.1.0",
    "@subsquid/substrate-typegen": "^8.0.2",
    "@subsquid/typeorm-codegen": "^0.3.2",
    "@types/node": "^17.0.23",
    "typescript": "~4.6.2"
  }
}
